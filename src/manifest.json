{
    "name": "Watch This Sol",
    "short_name": "Watch This Sol",
    "description": "Analyse wallets on HTML to have an easy redirect to SolScan",
    "version": "0.0.1",
    "version_name": "0.0.1",
    "manifest_version": 3,
    "default_locale": "en",
    "minimum_chrome_version": "88",
    "permissions": ["activeTab"],
    "icons": {
        "128": "assets/img/128x128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/img/16x16.png",
            "24": "assets/img/24x24.png",
            "32": "assets/img/32x32.png"
        },
        "default_title": "Watch This Sol"
    },
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["assets/img/solscan-icon.png", "assets/gif/how-works.gif"]
    }],
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*", "*://*.twitter.com/*", "*://x.com/*", "*://*.x.com/*"],
            "js": ["contentScript.js"]
        }
    ]
}
